<%% form_for :user do |form| -%>
	<p>
  	<b>Email Address</b><br />
		<%%= form.text_field :email_address %>
  </p>

	<p>
  	<b>Password</b><br />
		<%%= form.password_field :password %>
  </p>

	<p>
		<%%= check_box_tag :remember_me %>
