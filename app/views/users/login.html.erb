<% form_for :user, :html => { :id => "login_form" } do |form| -%>
	<p>
  	<b>Email Address</b><br />
		<%= form.text_field :email_address %>
  </p>

	<p>
  	<b>Password</b><br />
		<%= form.password_field :password %>
  </p>

	<p>
		<%= check_box_tag :remember_me %>
		<b>Remember Me</b>
	</p>

	<p>
  	<%= form.submit 'Login' %>
	</p>
<% end -%>

<%= link_to "forgot your password?", reminder_path %> | <%= link_to "need an account?", signup_path %>

<%= javascript_tag "$('login_form').focusFirstElement();" %>
