<div class="section">
  <div class="links">
    <%= link_to 'Show', project_path(@project), :class => "action" %> |
    <%= link_to 'Back', projects_path, :class => "action" %>
  </div>
  <h2>Editing project</h2>

  <%= error_messages_for :project %>

  <% form_for(:project, :url => project_path(@project), :html => { :method => :put }) do |f| %>
    <p>
      <b>Name</b><br />
      <%= f.text_field :name %>
    </p>
	
  	<p>
  		<b>Project Permissions</b><br />
  		<ul style="list-style: none;">
  		<% for user in @project.users -%>
  			<li><%= check_box_tag "users[]", user.id, @project.accessors.include?(user) %> <%= user.full_name %></li>
  		<% end -%>
  		</ul>
  	</p>

    <p>
      <%= submit_tag "Update" %>
    </p>
  <% end %>
</div>