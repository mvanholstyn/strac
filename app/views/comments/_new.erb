<h3>Create Comment</h3>

<%= error_messages_for :comment %>

<% remote_form_for :comment, :url => comments_path( :project_id=>@story.project_id, :story_id=>@story.id ) do |form| -%>
  <%= form.text_area "content", :rows=>"5" %>
  <p>
    <%= submit_tag "Create" %> or 
		<%= link_to( "cancel", "#", :onclick => update_page { |page| page.visual_effect( :blind_up, "new_comment", :duration => 0.3 ); page << "return false;" } ) %>
  </p>
<% end -%>
