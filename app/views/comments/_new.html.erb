<h3>Post Comment</h3>

<%= error_messages_for :comment %>

<% remote_form_for :comment, :url => comments_path( :project_id=>story.project_id, :story_id=>story.id ), :html => { :id => "comment_form" } do |form| -%>
  <%= form.text_area "content", :rows=>"5", :value=>"" %>
  <p>
    <%= submit_tag "Post Comment" %> 
  </p>
<% end -%>
