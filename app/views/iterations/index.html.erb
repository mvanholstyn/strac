<div class="section">
  <h2>Iterations</h2>

  <table class="iterations">
  <% for iteration in @iterations %>
    <tr class="iteration">
      <td class="name">
        <%= link_to h(iteration.name), iteration_path(@project, iteration) %>
  			<%= h("("+iteration.start_date.strftime( "%Y-%m-%d" )+" thru "+iteration.end_date.strftime( "%Y-%m-%d" )+")") %>
  		</td>
      <td><%= link_to '', iteration_path(@project, iteration), :class => "show", :title => "Show" %></td>
      <td><%= link_to '', edit_iteration_path(@project, iteration), :class => "edit", :title => "Edit" %></td>
      <td><%= link_to '', iteration_path(@project, iteration), :confirm => 'Are you sure?', :method => :delete, :class => "destroy", :title => "Destroy" %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New iteration', new_iteration_path( @project ) %>
</div>