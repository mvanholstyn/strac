<%= render :partial => "stories/toolbar", :locals => { :story => story } %>

<%= error_messages_for :story %>

<% remote_form_for(:story, :url => story_path(story.project, story), :html => { :method => :put }) do |form| -%>
  <%= render :partial => 'stories/form', :locals => { :form => form, :story => story } %>
  <p>
    <%= submit_tag "Update" %> or 
		<%= link_to( "cancel", "#", :onclick => update_page { |page| page.visual_effect( :blind_up, "story_#{story.id}_edit", :duration => 0.3 ); page << "return false;" } ) %>
  </p>
<% end -%>