page[:notice].replace_html %("#{@story.summary}" was successfully created.)
page[:error].hide
page[:notice].show
page.visual_effect :appear, :notice
page.delay( 10 ) {  page.visual_effect :fade, :notice }

iteration_id = "iteration_#{@story.iteration ? @story.iteration.id : 'nil'}"
page.insert_html :bottom, iteration_id, :partial => 'list', :locals => { :stories => [ @story ] }


iteration_list_ids = [ "iteration_nil" ] + @project.iterations.map{ |i| "iteration_#{i.id}" }
page.sortable iteration_id, :url => reorder_stories_path(@project), :method => :put,
                            :tag => 'div', :handle => 'draggable', :dropOnEmpty => true, :containment => iteration_list_ids

@story = Story.new # we want a fresh form
page["story_new"].replace_html :partial => 'new'