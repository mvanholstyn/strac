<% form_for :story, @stories_presenter, :html => { :method => :get } do |form| -%>
  <% field_set_tag "Search" do -%>
    <%= form.label :iterations %>
    <%= form.radio_button :iteration, "all" %> <%= form.label :iteration_all, "all", :class => "radio" %>
    <%= form.radio_button :iteration, "recent" %> <%= form.label :iteration_recent, "last, current, and future", :class => "radio" %>
    
    <%= form.submit "Search" %>
  <% end -%>
<% end %>