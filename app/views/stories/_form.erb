<table>
  <tr>
    <td valign="top">
      <table>
        <tr>
          <td>
            <b>Description</b>
          </td>
        </tr>
        <tr>
          <td>
            <%= form.text_area :description %>
          </td>
        </tr>
      </table>
    </td>
    <td valign="top">
      <table>
        <tr>
          <td>
            <b>Summary</b>
          </td>
          <td>
            <%= form.text_field :summary %>
          </td>
        </tr>
        <tr>
          <td>
            <b>Points</b>
          </td>
          <td>
            <%= form.text_field :points %>
          </td>
        </tr>
        <tr>
          <td>
            <b>Iteration</b>
          </td>
          <td>
            <%= form.collection_select :iteration_id, @project.iterations.ordered, :id, :name, :include_blank => true %>
          </td>
        </tr>
        <tr>
          <td>
            <b>Tags</b>
          </td>
          <td>
            <%= form.text_field :tag_list, :id => "story_#{@story.id || "nil"}_tag_list" %> <i>(tags are comma separated)</i>
						<div id="story_<%= @story.id || "nil" %>_tag_list_auto_complete" class="auto_complete_results"></div>
						<%= auto_complete_field "story_#{@story.id || "nil"}_tag_list", :url => auto_complete_tags_path, :tokens => ",", :param_name => 'tag' %>
          </td>
        </tr>
        <tr>
          <td>
            <b>Responsible Party</b>
          </td>
          <td>
            <%= select_tag "story[responsible_party_type_id]", options_for_responsible_parties( @story.responsible_party_type_id ) %>
          </td>
        </tr>
      <table>
    </td>
  </tr>
</table>
